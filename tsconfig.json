{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "rootDir": ".",
        "noEmit": false,
        "paths": {
            "@lib/*": ["lib/*"],
            "@lib-types/*": ["lib/types/*"],
            "@adapter": ["lib/adapter/index.ts"],
            "@types/*": ["src/types/*"],
        }
    },
    "include": [
        "src/**/*",
        "lib/**/*",
        // "src/index.ts",
        "game.js"
, "lib/types/wx.d.ts"    ],
    "exclude": [
        "./node_modules",
    ]
}